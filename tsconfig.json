{
  "compilerOptions": {
    "target": "esnext", // Target latest ECMAScript version
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use Node module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Use the new JSX transform
    "incremental": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules" // Example plugin for CSS modules
      },
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "out/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
